<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="146dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:minHeight="131dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageHeader"
            android:layout_width="150dp"
            android:layout_height="85dp"
            android:background="@color/background"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textTitle"
            style="@style/text12BoldCharcoalGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="5sp"
            android:maxLines="2"
            android:textSize="10sp"
            tools:text="Title and Description goes here!" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/gotham_book"
            android:lineSpacingExtra="5sp"
            android:maxLines="2"
            android:textColor="@color/greyish_brown"
            android:textSize="10sp"
            android:visibility="gone"
            tools:text="Ayo berbagi untuk teman-teman kanker. #antarkankebaikan." />

        <TextView
            android:id="@+id/buttonViewMore"
            style="@style/text12BoldTwilight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/view_more"
            android:visibility="gone" />

    </LinearLayout>


</androidx.cardview.widget.CardView>